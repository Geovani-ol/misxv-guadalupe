---
import Layout from '../layouts/Layout.astro';
---
<Layout>
	<main class="max-w-6xl mx-auto px-4 lg:px-8 space-y-12 bg-gradient-to-l from-[#F7E7CE] via-[#fff8E1] to-[#F7E7CE] min-h-screen">
		<!-- Sección principal -->
		<section class="flex flex-col items-center space-y-6">
			<div>
				<img src="/flordorada.png" alt="flor dorada" class="mx-auto max-h-80 rotate-180 mb-5" />
			</div>
			
			<div class="flex justify-center">
				<img src="/quinceanera.jpg" alt="Quinceañera" class="rounded-3xl shadow-lg max-h-80 w-auto" />
			</div>

			<div class="text-center">
				<h1 class="text-4xl md:text-6xl font-bold text-[#E2C290]">Guadalupe</h1>
				<p class="mt-2 text-lg text-gray-700">22 de Noviembre</p>
			</div>
		</section>

		<!-- Sección frase -->
		<section class="py-12"></section>

		<!-- Sección donde y cuando -->
		<section class="py-12"></section>

		<!-- Sección fotos de la quinceañera -->
		<section class="py-12"></section>

		<!-- Sección mis personas faboritas -->
		<section class="py-12"></section>

		<!-- Sección confirmar asistencia -->
		<section class="py-12"></section>
	</main>
</Layout>
